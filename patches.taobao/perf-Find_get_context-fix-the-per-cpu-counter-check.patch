===================================================================
--- linux-2.6.32-131.4.1.el6.orig/kernel/events/core.c
+++ linux-2.6.32-131.4.1.el6/kernel/events/core.c
@@ -2211,7 +2211,7 @@ find_get_context(struct pmu *pmu, struct
 	unsigned long flags;
 	int ctxn, err;
 
-	if (!task && cpu != -1) {
+	if (!task) {
 		/* Must be root to operate on a CPU event: */
 		if (perf_paranoid_cpu() && !capable(CAP_SYS_ADMIN))
 			return ERR_PTR(-EACCES);
