From:   Mike Waychison <mikew@google.com>
Date:   Mon Apr 25 13:48:51 2011 +0800
Subject: [PATCH 16/24] oops: pass pt_regs along to oops_exit.
Patch-mainline: linux-2.6.32-71.18.1.el6

Signed-off-by: Mike Waychison <mikew@google.com>
Signed-off-by: Robin Dong <sanbai@taobao.com>
---
Index: linux-2.6.32-71.24.1.el6/arch/arm/kernel/traps.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/arch/arm/kernel/traps.c
+++ linux-2.6.32-71.24.1.el6/arch/arm/kernel/traps.c
@@ -263,7 +263,7 @@ NORET_TYPE void die(const char *str, str
 	bust_spinlocks(0);
 	add_taint(TAINT_DIE);
 	spin_unlock_irq(&die_lock);
-	oops_exit();
+	oops_exit(regs);
 
 	if (in_interrupt())
 		panic("Fatal exception in interrupt");
Index: linux-2.6.32-71.24.1.el6/arch/parisc/kernel/traps.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/arch/parisc/kernel/traps.c
+++ linux-2.6.32-71.24.1.el6/arch/parisc/kernel/traps.c
@@ -294,7 +294,7 @@ void die_if_kernel(char *str, struct pt_
 		panic("Fatal exception");
 	}
 
-	oops_exit();
+	oops_exit(regs);
 	do_exit(SIGSEGV);
 }
 
Index: linux-2.6.32-71.24.1.el6/arch/powerpc/kernel/traps.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/arch/powerpc/kernel/traps.c
+++ linux-2.6.32-71.24.1.el6/arch/powerpc/kernel/traps.c
@@ -168,7 +168,7 @@ int die(const char *str, struct pt_regs
 	if (panic_on_oops)
 		panic("Fatal exception");
 
-	oops_exit();
+	oops_exit(regs);
 	do_exit(err);
 
 	return 0;
Index: linux-2.6.32-71.24.1.el6/arch/s390/kernel/traps.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/arch/s390/kernel/traps.c
+++ linux-2.6.32-71.24.1.el6/arch/s390/kernel/traps.c
@@ -274,7 +274,7 @@ void die(const char * str, struct pt_reg
 		panic("Fatal exception in interrupt");
 	if (panic_on_oops)
 		panic("Fatal exception: panic_on_oops");
-	oops_exit();
+	oops_exit(regs);
 	do_exit(SIGSEGV);
 }
 
Index: linux-2.6.32-71.24.1.el6/arch/sh/kernel/traps_32.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/arch/sh/kernel/traps_32.c
+++ linux-2.6.32-71.24.1.el6/arch/sh/kernel/traps_32.c
@@ -181,7 +181,7 @@ void die(const char * str, struct pt_reg
 	bust_spinlocks(0);
 	add_taint(TAINT_DIE);
 	spin_unlock_irq(&die_lock);
-	oops_exit();
+	oops_exit(regs);
 
 	if (kexec_should_crash(current))
 		crash_kexec(regs);
Index: linux-2.6.32-71.24.1.el6/arch/x86/kernel/dumpstack.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/arch/x86/kernel/dumpstack.c
+++ linux-2.6.32-71.24.1.el6/arch/x86/kernel/dumpstack.c
@@ -255,7 +255,7 @@ void __kprobes oops_end(unsigned long fl
 		/* Nest count reaches zero, release the lock. */
 		__raw_spin_unlock(&die_lock);
 	raw_local_irq_restore(flags);
-	oops_exit();
+	oops_exit(regs);
 
 	if (!signr)
 		return;
Index: linux-2.6.32-71.24.1.el6/include/linux/kernel.h
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/include/linux/kernel.h
+++ linux-2.6.32-71.24.1.el6/include/linux/kernel.h
@@ -164,7 +164,7 @@ extern long (*panic_blink)(long time);
 NORET_TYPE void panic(const char * fmt, ...)
 	__attribute__ ((NORET_AND format (printf, 1, 2))) __cold;
 extern void oops_enter(void);
-extern void oops_exit(void);
+extern void oops_exit(struct pt_regs *);
 extern int oops_may_print(void);
 NORET_TYPE void do_exit(long error_code)
 	ATTRIB_NORET;
Index: linux-2.6.32-71.24.1.el6/kernel/panic.c
===================================================================
--- linux-2.6.32-71.24.1.el6.orig/kernel/panic.c
+++ linux-2.6.32-71.24.1.el6/kernel/panic.c
@@ -358,7 +358,7 @@ static void print_oops_end_marker(void)
  * Called when the architecture exits its oops handler, after printing
  * everything.
  */
-void oops_exit(void)
+void oops_exit(struct pt_regs *regs)
 {
 	do_oops_enter_exit();
 	print_oops_end_marker();
